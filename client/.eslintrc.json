{
	"root": true,
	"env": {
		"es6": true,
		"node": true
	},
	"extends": [
		"plugin:vue/essential",
		"@vue/airbnb"
	],
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"brace-style": [
			"error",
			"stroustrup"
		],
		"eol-last": [
			"error",
			"always"
		],
		"semi": [
			1,
			"always"
		],
		"space-before-function-paren": [
			"error",
			"never"
		],
		"comma-dangle": [
			"error",
			"never"
		],
		"no-unused-vars": [
			"error"
		],
		"no-var": [
			"error"
		],
		"one-var": [
			"off"
		],
		"vue/html-indent": [
			"error",
			"tab"
		],
		"vue/script-indent": [
			"error",
			"tab"
		],
		"vue/html-closing-bracket-newline": [
			"error",
			{
				"singleline": "never",
				"multiline": "never"
			}
		],
		"vue/max-attributes-per-line": [
			"error",
			{
				"singleline": 4,
				"multiline": {
					"max": 2,
					"allowFirstLine": true
				}
			}
		],
		"no-tabs": 0
	},
	"parserOptions": {
		"parser": "babel-eslint"
	}
}